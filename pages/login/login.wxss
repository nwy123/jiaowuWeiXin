/* pages/login/login.wxss */
page{
  height:100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:none;
  box-sizing: border-box;
} 

.login_logo{
	width: 45%;
	height: 90rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 130rpx;
}
.login_logo_imgbox{
	width: 100%;
	height: 100rpx;
	align-items: center;
  margin-bottom: 40rpx;
}
.login_logo_imgbox image{
  width:100%;
  height:100rpx;
}

.login_logo_text{
	width: 100%;
	height: 43rpx;
	font-size: 32rpx;
	display: flex;
	justify-content: center;
	align-items: center;
  color: #327aaa;
	
}

.login_btn_area{
	display: flex;
	flex-direction: column;
	width:90%;
	margin-top: 210rpx;
}
.btn_box{
	display: flex;
	align-items: center;
	width: 100%;
	height: 85rpx;
	border: solid #edf0f3 2rpx;
	border-radius: 40rpx;
	margin-bottom: 40rpx;
	box-sizing: border-box;
	outline: none;
	padding-left: 30rpx;
	font-size: 14px;
}
.btn_box:hover{
  border:solid 1rpx #bbdaff;
}
.btn_input{
	width: 80%;
	height:100%;
	padding-left: 35rpx;
}
.btn_img{
	width: 20%;
	height: 80%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.btn_img image{
	width:50rpx;
	height: 50rpx;
}

.login_btn_enter{
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 85rpx;
	border-radius: 40rpx; 
  	z-index: 8;                          
	border: none;
	margin-top: 50rpx;
	background-image: linear-gradient(150deg, #2f6dff 30%, #01d0ff 70%);
	outline: none;
	color: #fff;
  font-size:34rpx;
}

.login_bottom-box{
  position: fixed;
  width:90%;
  height:18%;
  bottom: 10rpx;
  display: flex;
  justify-content: center;
  z-index: 1;
}
.login_bottom-box image{
  width:100%;
  height:100%;
}
