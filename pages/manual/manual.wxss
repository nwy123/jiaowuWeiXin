
/*tab  wxss*/
page{
  height: 100%;
}
swiper{
  height:100%;
}

.swiper-tab{  
    width: 100%;  
    background: #fff;
    border-bottom: 2rpx solid #d0d0d0;  
    text-align: center;  
    line-height: 80rpx;
    position: fixed;
    top: 0px;
    z-index: 2;
  }  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 25%;  
    color: #272727;  
}  
.on{
     color: #00a0e8;  
     border-bottom: 5rpx solid #00a0e8;
  }  
  
.cell_box{
  width:100%;
  height:200rpx;
  display: flex;
  align-items: center;
  border-bottom: solid 1rpx #ededed;
}
.hover_sty{
  background:#f5f5f5;
}
.photo_box{
  width:110rpx;
  height:140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-left:30rpx;
  
}
.photo_box image{
  width:110rpx;
  height:130rpx;
  border-radius: 10rpx;
}

.text_box{
  width:60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 50rpx;
  color: #687176;
  font-size: 30rpx;
}
.mr_text{
  margin-top:10rpx;
}
.text_key{
  color: #000000;
  font-size: 38rpx;
}

.btn_box{
  width:20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.jl_box{
  width:70rpx;
  height:70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  overflow: hidden;
  color:#fff;
}
.bg_1{
  background: #5fcc5f;
}
.bg_2{
  background:#f03f52;
}
.jl_box image{
  width: 40rpx;
  height: 40rpx;
}
.btn_item{
  width:112rpx;
  height:54rpx;
  border:solid 1rpx #a6d5f3;
  border-radius: 5rpx;
  font-size: 28rpx;
  color:#687176;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn_item_img{
  width:40rpx;
  height:40rpx;
}
.active{
  background: #2795db;
  color: #fff;
}
.btn_area{
  width:100%;
  /* height:100rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.tj_sty{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: fixed;
  right: 160rpx;
  bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  background: #474747;
  font-size: 24rpx;
  z-index: 100;
}